generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Resource {
  id           String @id @default(uuid()) @db.VarChar(255)
  name         String @db.VarChar(255)
  type         String @db.VarChar(255)
  respawnTimer Int

  // ✅ Rückbezug auf die ResourcePosition-Tabelle (1:n-Relation)
  positions ResourcePosition[]

  @@map("resources") // Tabellenname in der DB bleibt 'resources'
}

model ResourcePosition {
  id          String    @id @default(uuid()) @db.VarChar(255)
  resourceId  String    @db.VarChar(255)
  description String?   @db.Text
  lat         Float
  lng         Float
  rarity      String    @db.VarChar(50)
  image       Bytes?
  lastHarvest DateTime?

  // ✅ Richtige Relation → Referenz auf Resource
  resource Resource @relation(fields: [resourceId], references: [id])

  // ✅ Index ohne `map`
  @@index([resourceId])
  @@map("resourcepositions") // Tabellenname in der DB bleibt 'resourcepositions'
}
